.green{
	color: #31b977;
}
.red{
	color: red;
}

/*that means a record*/
.item {
	margin-bottom: 20rpx;
	background: #fff;
	padding: 20rpx;
}
/*姓名与手机号码*/
.item .header {
	font-size: 36rpx;
	color: #333;
	line-height: 72rpx;
}

.item .header .txt {
	margin-right: 40rpx;
}

.item .summary {
	color: #999;
	font-size: 32rpx;
	line-height: 60rpx;
}

.item .footer {
	border-top: 1px solid #c3b9b9;
	font-size: 30rpx;
	color: #333;
	padding-left: 10rpx;
	padding-top: 10rpx;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
}

/*设为默认地址*/
.set-default {
	display: flex;
	align-items: center;
}

/*编辑与删除操作*/
.item .footer .operation {
	width: 280rpx;
	display: flex;
}

.item .footer .operation .container {
	display: flex;
	align-items: center;
}

 .image {
	width: 60rpx;
	height: 60rpx;
}

.txt{
	margin-left: 10rpx;
}

/*地址列表包装容器*/
.address-list {
	margin-bottom: 56px;
}

